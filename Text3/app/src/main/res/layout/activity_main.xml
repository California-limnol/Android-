<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:id="@+id/LinearLayout1"
    android:divider="@drawable/ktv_line_div"
    android:orientation="vertical"
    android:showDividers="middle"
    android:dividerPadding="10dp"
    tools:context="com.jay.example.linearlayoutdemo.MainActivity">



    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/主页1">
    </RelativeLayout>

    <Button
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/ly_top_bar"
        android:background="@drawable/个人资料"

        />
    <View
        android:id="@+id/imgy"
        android:layout_below="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <Button
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/imgy"
        android:background="@drawable/我的小店"
         />


    <Button
        android:id="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/img2"
        android:background="@drawable/我的订单"
         />
    <TextView
        android:id="@+id/imgx"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/bg_white"
        android:layout_below="@+id/img3"
        />
    <Button
        android:id="@+id/img4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/imgx"
        android:background="@drawable/我的收藏"
        />
    <View
        android:id="@+id/imgp"
        android:layout_below="@+id/img4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />
    <Button
        android:id="@+id/img5"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/imgp"
        android:background="@drawable/设置"
         />
    <View
        android:id="@+id/imgq"
        android:layout_below="@+id/img5"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_chat"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/home"
            android:gravity="center"
            android:padding="5dp"
            android:text="首页"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_contract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/paimai"
            android:drawablePadding="3dp"
            android:background="@drawable/tab_menu_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="拍卖1"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_diacover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/信息2"
            android:gravity="center"
            android:padding="5dp"
            android:text="信息"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/我的"
            android:gravity="center"
            android:padding="5dp"
            android:text="我的"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="16sp" />

    </LinearLayout>




    <FrameLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </FrameLayout>


</RelativeLayout>